# Zathura configuration file
# See man `man zathurarc'
map r reload
map p print
map i recolor
map J zoom out
map K zoom in
map R rotate
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set scroll-full-overlap 0.01
set scroll-step 100
set font			"mononoki Nerd Font 10"
set selection-notification	"true"
set selection-clipboard		"clipboard"
set guioptions			"sv"
set statusbar-home-tilde	"true"
set recolor			"true"

set default-fg 			"#f0f0f0" #Background
set default-bg 			"#0f0f0f" #Foreground

set completion-bg		"#0f0f0f"
set completion-fg		"#f0f0f0"
set completion-highlight-bg	"#c49ec4"
set completion-highlight-fg	"#0f0f0f"
set completion-group-bg		"#0f0f0f"
set completion-group-fg		"#c49ec4"

set statusbar-fg		"#f0f0f0"
set statusbar-bg		"#262626"
set statusbar-h-padding		10
set statusbar-v-padding		10

set notification-bg		"#262626"
set notification-fg		"#f0f0f0"
set notification-error-bg	"#ceb188"
set notification-error-fg	"#0f0f0f"
set notification-warning-bg	"#c49ea0"
set notification-warning-fg	"#0f0f0f"

set inputbar-fg			"#f0f0f0"
set inputbar-bg 		"#262626"

set recolor-lightcolor          "#0f0f0f" # Background
set recolor-darkcolor           "#f0f0f0" # Foreground

set index-fg			"#f0f0f0"
set index-bg			"#0f0f0f"
set index-active-fg		"#0f0f0f"
set index-active-bg		"#c49ec4"

set render-loading-bg		"#0f0f0f"
set render-loading-fg		"#f0f0f0"

set highlight-color		"#a39ec4"
set highlight-active-color	"#c49ec4"
