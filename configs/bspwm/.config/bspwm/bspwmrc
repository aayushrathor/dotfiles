#! /bin/sh
#  __                                                   
# |  \                                                  
# | ▓▓____   _______  ______  __   __   __ ______ ____  
# | ▓▓    \ /       \/      \|  \ |  \ |  \      \    \ 
# | ▓▓▓▓▓▓▓\  ▓▓▓▓▓▓▓  ▓▓▓▓▓▓\ ▓▓ | ▓▓ | ▓▓ ▓▓▓▓▓▓\▓▓▓▓\
# | ▓▓  | ▓▓\▓▓    \| ▓▓  | ▓▓ ▓▓ | ▓▓ | ▓▓ ▓▓ | ▓▓ | ▓▓
# | ▓▓__/ ▓▓_\▓▓▓▓▓▓\ ▓▓__/ ▓▓ ▓▓_/ ▓▓_/ ▓▓ ▓▓ | ▓▓ | ▓▓
# | ▓▓    ▓▓       ▓▓ ▓▓    ▓▓\▓▓   ▓▓   ▓▓ ▓▓ | ▓▓ | ▓▓
#  \▓▓▓▓▓▓▓ \▓▓▓▓▓▓▓| ▓▓▓▓▓▓▓  \▓▓▓▓▓\▓▓▓▓ \▓▓  \▓▓  \▓▓
#                   | ▓▓                                
#                   | ▓▓                                
#                    \▓▓                                

pgrep -x sxhkd > /dev/null || sxhkd &
bspc monitor -d I II III IV V VI VII VIII

bspc config window_gap          8

#ratio
bspc config split_ratio          0.50
bspc config borderless_monocle   true
bspc config gapless_monocle      true

#border
bspc config border_width          4 
bspc config active_border_color 	"#383838"
bspc config focused_border_color  "#95D1CC"
bspc config normal_border_color 	"#383838"

#rule
bspc rule -a Gimp desktop='^8' state=floating follow=on
bspc rule -a Brave-browser desktop='^2'
bspc rule -a Google-Chrome desktop='^2'
bspc rule -a "Vivaldi-stable" desktop='^2'
bspc rule -a mplayer2 state=floating
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off
bspc rule -a "Thunar" state=floating rectangle=876x576+0+0 center=true

#auto-start
zsh ~/.fehbg
zsh $HOME/.config/polybar/launch.sh 

# Notifications
killall dunst
dunst --config $HOME/.config/dunst/dunstrc &

# Polkit
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &

#picom --config $HOME/.config/picom/picom.conf
picom --experimental-backend --config $HOME/.config/picom/picom.conf 
